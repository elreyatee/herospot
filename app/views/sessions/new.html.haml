.container
  .row
    .col-md-8.col-md-offset-2
      .well
        = bootstrap_form_tag url: login_path, layout: :horizontal, label_col: "col-md-2", control_col: "col-md-8" do |f|
          %h2.text-center Login
          %br
          %fieldset
            = f.email_field :email, label: "Email", icon: "envelope", placeholder: "Email"
            = f.password_field :password, label: "Password", icon: "lock", placeholder: "Password"
          %fieldset.col-md-offset-2
            = f.submit "Submit", class: "btn btn-success"